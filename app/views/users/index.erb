<% if current_user %>
<div class="container">
<h3>You are in user info!</h3>
</div>
<div class="container">
  <p><b><%= (@user.username).capitalize %></b>, welcome to profile editor!<p>



  <table>
    <tr>
      <th>Username: </th>
      <th>Email: </th>
    </tr>

    <td><%= @user.username %></td>
    <td><%= @user.email %></td>
  </table>

  <br>


<div>
  <a href='/users/<%= @user.id %>/edit'>Edit you profile</a>
</div>
<% end %>
